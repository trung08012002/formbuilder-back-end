{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
    },
    "types": ["node"],
    "typeRoots": ["./src/type.d.ts", "./node_modules/@types"],
  },
  "files": ["src/type.d.ts"],
  "include": ["src/**/*"],
}
